<div class="col-md-12">
  <h3 class="dark">My Reviews</h3>

  <table class="table">
    <th>Nickname</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Stability</th>
    <th>Content</th>
    <th>Tasks</th>


    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.location.nickname %></td>
        <td><%= review.location.lat %></td>
        <td><%= review.location.lon %></td>
        <td><%= review.stability %></td>
        <td><%= review.content %></td>
        <td>
        <%= link_to 'Show', review %>
        <%= link_to 'Edit', edit_review_path(review)%>
        <%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
        </td>
      </tr>
    <% end %>

  </table>
</div>
