<% if params[:location_id] %>

  <%= form_for([@location, @review]) do |f| %>
      <%= f.label "Date Visited:" %>
      <%= f.datetime_field :date_visited, value: Time.now.strftime("%Y-%m-%dT%H:%M") %><br>

      <%= f.label "Stability (10 is maximum stability):" %>
      <%= f.range_field :stability, in: 0..10, step: '1', value: @review.stability, placeholder: @review.stability %><br>

      <%= f.label "Content:" %>
      <%= f.text_area :content, value: @review.content, placeholder: @review.content %><br>

      <%= f.submit %>
  <% end %>

<% end %>
