<p>
  <%= f.label "Date Visited:" %>
  <%= f.datetime_field :date_visited, value: Time.now.strftime("%Y-%m-%dT%H:%M"), class: 'form-control' %>
</p>
<p>
  <%= f.label "Stability (10 is maximum stability):" %>
  <%= f.range_field :stability, in: 0..10, step: '1', value: @review.stability, placeholder: @review.stability %>
</p>
<p>
  <%= f.label "Content:" %>
  <%= f.text_area :content, value: @review.content, placeholder: @review.content, class: 'form-control' %>
</p>
<p>
  <%= f.label "Aesthetics:" %>
  <%= f.range_field :aesthetics, in: 0..10, step: '1', value: @review.aesthetics, placeholder: @review.aesthetics %>
</p>
<p>
  <%= f.label "Safety:" %>
  <%= f.range_field :safety, in: 0..10, step: '1', value: @review.safety, placeholder: @review.safety %>
</p>
  <%= f.label "Amenities:" %>
  <%= f.range_field :amenities, in: 0..10, step: '1', value: @review.amenities, placeholder: @review.amenities %>
</p>
