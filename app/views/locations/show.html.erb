<div>

  <h4>nickname: <%= @location.nickname %></h4>
  latitude: <%= @location.lonlat.lat %><br />
  longitude: <%= @location.lonlat.lon %><br />

  <% if current_user.admin %>
  <p>
    <%= link_to 'Edit Location', edit_location_path(@location)%>
    <%= link_to 'Destroy', @location, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
  </p>
  <% end %>

  <h4>Reviews</h4>

  <% if current_user %>
    <!-- <input type="button" value="Add Review" id="reveal" onClick="reveal();" /> -->
    <p>
      <%= link_to "Add Review", new_location_review_path(@location) %>
    </p>
  <% end %>

  <!-- Add Review to this Location  -->

  <div id="form" style="display:none;">

    <form action="/reviews" method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >
      <p><h5>New Review:</h5></p>
      <input type="hidden" name="location_id" value="<%= @location.id %>" />
      <p>Date visited: <input id="date_visited" type="textarea" rows="2" name="date_visited" value="<%= Time.now.strftime("%b %d, %Y %H:%M %Z") %>"></input></p>
      <p><span><label for="stability">Stability Rating (10 for maximum stability)</label>
      <input type="range" id="stability" name="stability" value="" min="0" max="10" step="1" placeholder="<%= @review.stability if @review %>"></input></span></p>
      <p>Content: <input type="text" name="content" id="content" value="" placeholder="Slept like a baby here"></input></p>
      <p><input type="submit" value="Submit Review" /></p>
    </form>

  </div>

  <!-- Existing reviews -->

  <div class="reviews">

    <table>

        <td><u>Feedback</u></td>
        <td><u>Stability</u></td>
        <td><u>Author</u></td>
        <td><u>Date Visited</u></td>
        <td><u>Links</u></td>

      <% @location.reviews.each do |review|  %>

        <tr class="review">
          <td><%= review.content %></td>
          <td><%= review.stability %></td>
          <td><%= review.user.username %></td>
          <td><%= review.date_visited %></td>


          <% if current_user.admin || review.user_id == current_user.id %>
            <td class="links">
              <%= link_to 'Show', review_path(review) %>
              <%= link_to 'Edit', edit_review_path(review)%>
              <%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          <% end %>
        </tr>

      <% end %>
    </table>

  </div>
</div>
