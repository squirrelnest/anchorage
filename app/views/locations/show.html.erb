<div>

  <h4>nickname: <%= @location.nickname %></h4>
  latitude: <%= @location.lonlat.lat %><br />
  longitude: <%= @location.lonlat.lon %><br />

  <p>
    <%= link_to 'Show', @location %>
    <%= link_to 'Edit', edit_location_path(@location)%>
    <%= link_to 'Destroy', @location, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
  </p>

  <h4>Reviews</h4>

  <div class="reviews">
    <% @location.reviews.each do |review|  %>

      <div class="review">
        <p>Feedback: <%= review.content %></p>
        <p>Stability: <%= review.stability %></p>
        <p>Author: <%= review.user.username %></p>
        <p>Date Visited: <%= review.date_visited %></p>
      </div>

    <% end %>
  </div>
</div>
